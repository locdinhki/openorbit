{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "packages/core/src/**/*",
    "packages/extensions/*/src/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@openorbit/core/*": [
        "packages/core/src/*"
      ],
      "@openorbit/ext-jobs/*": [
        "packages/extensions/ext-jobs/src/*"
      ]
    }
  }
}
