{
  "name": "@openorbit/ext-telegram",
  "version": "1.0.0",
  "description": "Telegram bot gateway for remote AI-powered job search control",
  "type": "module",
  "main": "./src/main/index.ts",
  "keywords": ["openorbit-extension"],
  "openorbit": {
    "id": "ext-telegram",
    "displayName": "Telegram Bot",
    "icon": "send",
    "activationEvents": ["onStartup"],
    "main": "./src/main/index.ts",
    "renderer": "./src/renderer/index.ts",
    "contributes": {
      "settings": [
        { "key": "telegram.bot-token", "label": "Bot Token", "type": "password", "description": "Token from BotFather" },
        { "key": "telegram.authorized-chat-ids", "label": "Authorized Chat IDs", "type": "string", "description": "Comma-separated chat IDs allowed to use the bot" }
      ]
    }
  },
  "dependencies": {
    "@openorbit/core": "*"
  }
}
