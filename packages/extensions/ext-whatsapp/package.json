{
  "name": "@openorbit/ext-whatsapp",
  "version": "1.0.0",
  "description": "WhatsApp bot gateway for remote AI-powered job search control via Baileys",
  "type": "module",
  "main": "./src/main/index.ts",
  "keywords": ["openorbit-extension"],
  "openorbit": {
    "id": "ext-whatsapp",
    "displayName": "WhatsApp Bot",
    "category": "messaging",
    "icon": "message-circle",
    "activationEvents": ["onStartup"],
    "main": "./src/main/index.ts",
    "renderer": "./src/renderer/index.ts",
    "contributes": {
      "settings": [
        { "key": "whatsapp.authorized-numbers", "label": "Authorized Numbers", "type": "string", "description": "Comma-separated phone numbers allowed (empty = all)" },
        { "key": "whatsapp.data-dir", "label": "Auth Data Directory", "type": "string", "description": "Directory for WhatsApp session/auth files" },
        { "key": "voice.openai-api-key", "label": "Voice API Key (OpenAI)", "type": "password", "description": "Optional fallback â€” not needed if Whisper CLI is installed locally (pip install openai-whisper)" }
      ]
    }
  },
  "dependencies": {
    "@openorbit/core": "*",
    "@openorbit/ext-jobs": "*",
    "@whiskeysockets/baileys": "^6.7.18"
  }
}
